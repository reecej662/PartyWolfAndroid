<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginA"
    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/login_bg"
        android:id="@+id/background_image"
        android:scaleType="fitXY"
        />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="225dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/bigLogo"
        android:src="@drawable/logo" />

    <!--<ImageButton
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text=""
        android:padding="0dp"
        android:id="@+id/fbLoginButton"
        android:layout_above="@+id/learnMoreButton"
        android:src="@drawable/fblogin"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn More"
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/learnMoreButton"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:layout_above="@+id/fbText"
        style="?android:attr/borderlessButtonStyle"/>

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/fbLoginButton"
        android:layout_above="@+id/learnMoreButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fblogin"
        android:layout_marginBottom="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="*Facebook is used to provide gender breakdowns and a list of your friends that hyped an event. Your .edu email is used to show you content specific to your college and verify you are a student. By logging in with Facebook you agree to our Terms of Service."
        android:textSize="11dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#dddddd"
        android:id="@+id/fbText"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
